@model EntityLayer.Entities.Product
@{
    ViewBag.Title = "Update";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/NiceAdmin/css/style.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()


                <div class="form-group">
                    <label style="font-weight:bold">Ad</label>
                    <input type="text" class="form-control" name="Name" value="@Model.Name" />

                </div>
                <br />
                <div class="form-group">
                    <label style="font-weight:bold">Açıklama</label>
                    <input type="text" class="form-control" name="Description" value="@Model.Description" />

                </div>
                <br />
                <div class="form-group">
                    <label style="font-weight:bold">Mevcut Resim</label>
                    <img src="~/Content/Image/@Model.Image" width="80" height="80" />
                </div>
                <br />
                <div class="form-group">
                    <label style="font-weight:bold" class="control-label-col-md-2">Resim</label>
                    <input type="file" class="form-control" name="File" />
                    @Html.ValidationMessageFor(x => x.Image, "", new { @style = "color:red" })
                </div>
                @*<div class="form-group">
                    @Html.LabelFor(x => x.Image, "Resim", htmlAttributes: new { @class = "control-label-col-md-2" })
                    <input type="file" class="form-control" name="File" />

                </div>*@
                <br />
                <div class="form-group">
                    <label style="font-weight:bold">Fiyat</label>
                    <input type="text" class="form-control" name="Price" value="@Model.Price" />

                </div>
                <br />
                <div class="form-group">
                    <label style="font-weight:bold">Stok</label>
                    <input type="text" class="form-control" name="Stock" value="@Model.Stock" />

                </div>
                <br />
                <div class="form-group">
                    <label style="font-weight:bold">Popüler</label>
                    @Html.EditorFor(x => x.Popular)

                </div>
                <br />
                <div class="form-group">
                    <label style="font-weight:bold">Kategori</label>
                    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.ktgr, new { @class = "Form-control" })

                </div>
                <button class="btn btn-primary btn-lg" type="submit">Ekle</button>
                <a href="/AdminProduct/Index" class="btn btn-primary btn-lg">Ürün Listesi</a>
            </form>
        </div>
    </div>
</div>

